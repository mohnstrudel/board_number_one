/ Start: Topbar
%header#topbar.ph10
  .topbar-left
    %ul.nav.nav-list.nav-list-topbar.pull-left
      %li
        =link_to 'Дашборд', admin_path
      %li
        =link_to 'Бортики', admin_settings_borders_path, method: :get
      %li
        =link_to 'Цвета', admin_settings_colors_path, method: :get
      %li
        =link_to 'Узоры', admin_settings_patterns_path, method: :get
      %li
        =link_to 'Ткани', admin_settings_fabrics_path, method: :get
      %li
        =link_to 'Категории', admin_settings_categories_path, method: :get
        / =link_to get_route(params[:controller]), params[:controller].split("/")[1]

  .topbar-right.hidden-xs.hidden-sm
    =link_to '#', class: "btn btn-default btn-sm fw600 ml10" do
      %span.fa.fa-plus.pr5
      Новый товар
    =link_to '#', class: 'btn btn-default btn-sm fw600 ml10' do
      %span.fa.fa-plus.pr5
      Новый заказ
    =link_to '#', class: 'btn btn-default btn-sm fw600 ml10' do
      %span.fa.fa-user.pr5
      Новый клиент
/ End: Topbar