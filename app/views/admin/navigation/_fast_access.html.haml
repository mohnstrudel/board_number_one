#topbar-dropmenu.alt.topbar-menu-open{style: "display: block;"}
  .topbar-menu.row
    .col-xs-4.col-sm-2
      =link_to '#', class: "metro-tile bg-primary light" do
        %span.glyphicon.glyphicon-book.text-muted
        %span.metro-title Товары
    .col-xs-4.col-sm-2
      =link_to '#', class: "metro-tile bg-success light" do
        %span.glyphicon.glyphicon-user.text-muted
        %span.metro-title Клиенты
    .col-xs-4.col-sm-2
      =link_to '#', class: "metro-tile bg-system light" do
        %span.glyphicon.glyphicon-tag.text-muted
        %span.metro-title Заказы
    .col-xs-4.col-sm-2
      =link_to '#', class: "metro-tile bg-warning light" do
        %span.fa.fa-gears.text-muted
        %span.metro-title Настройки
